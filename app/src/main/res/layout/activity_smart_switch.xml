<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SmartSwitchActivity">

    <Button
        android:id="@+id/get_secret_key_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="Get Secret Key"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/secret_key_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="36dp"
        android:text="0%"
        app:layout_constraintStart_toEndOf="@+id/get_secret_key_btn"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/read_config_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Read Configuration"
        app:layout_constraintStart_toStartOf="@+id/get_secret_key_btn"
        app:layout_constraintTop_toBottomOf="@+id/get_secret_key_btn" />

    <Button
        android:id="@+id/start_config_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Start Configuration"
        app:layout_constraintStart_toStartOf="@+id/read_config_btn"
        app:layout_constraintTop_toBottomOf="@+id/read_config_btn" />

    <Button
        android:id="@+id/unbind_config_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Unbind Configuration"
        app:layout_constraintStart_toStartOf="@+id/start_config_btn"
        app:layout_constraintTop_toBottomOf="@+id/start_config_btn" />

    <Button
        android:id="@+id/update_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Update Configuration"
        app:layout_constraintStart_toStartOf="@+id/unbind_config_btn"
        app:layout_constraintTop_toBottomOf="@+id/unbind_config_btn" />
</androidx.constraintlayout.widget.ConstraintLayout>