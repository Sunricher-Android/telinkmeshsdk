<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <Button
        android:id="@+id/default_network_btn"
        android:layout_width="200dp"
        android:layout_height="52dp"
        android:layout_marginTop="40dp"
        android:text="Default network"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/android_telink_btn"
        android:layout_width="200dp"
        android:layout_height="52dp"
        android:layout_marginTop="30dp"
        android:text="Android telink"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/default_network_btn" />

    <Button
        android:id="@+id/all_devices_btn"
        android:layout_width="200dp"
        android:layout_height="52dp"
        android:layout_marginTop="30dp"
        android:text="All devices"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/android_telink_btn" />
</androidx.constraintlayout.widget.ConstraintLayout>